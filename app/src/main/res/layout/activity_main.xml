<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="demo.cwf.com.androidgpsdemo.MainActivity">

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:text="定位" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:orientation="horizontal">

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/start_listener_gps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="使用GPS定位监听" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/start_listener_network"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="使用网络定位监听" />
    </LinearLayout>


    <android.support.v7.widget.AppCompatButton
        android:id="@+id/stop_listener"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:text="关闭定位监听" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/clear_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:text="清楚数据" />

    <ListView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></ListView>
</LinearLayout>
